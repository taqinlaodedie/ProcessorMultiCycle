			when others  => oHEX6_D <= "0111111"; --'-'
		end case;		
		
		case(Display(31 downto 28)) is
			when "0000" =>  oHEX7_D <= "1000000"; --0
			when "0001" =>  oHEX7_D <= "1111001"; --1
			when "0010" =>  oHEX7_D <= "0100100"; --2
